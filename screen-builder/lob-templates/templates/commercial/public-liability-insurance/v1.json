{
  "schemaVersion": "1.0",
  "settings": {
    "quote": {
      "defaultPaymentFrequency": "annual",
      "allowMonthly": true,
      "allowAnnual": true
    },
    "logic": {
      "defaultCombinator": "AND",
      "truthyValues": [
        true,
        "true",
        "yes",
        "Yes"
      ]
    },
    "ui": {
      "showProgress": true,
      "showPageNav": true
    }
  },
  "lob": {
    "id": "public-liability",
    "name": "Public Liability Insurance",
    "journey": "quote-buy",
    "currency": "GBP",
    "locale": "en-GB",
    "version": "2026-01-16"
  },
  "pages": [
    {
      "id": "start",
      "title": "Get a public liability quote",
      "kind": "form",
      "groups": [
        {
          "id": "start.about",
          "title": "Before we start",
          "elements": [
            {
              "id": "start.intro",
              "type": "display",
              "text": "We’ll ask about your business activities and the level of cover you need."
            },
            {
              "id": "start.coverStart",
              "type": "date",
              "label": "When do you want cover to start?",
              "required": true
            },
            {
              "id": "start.isUKBusiness",
              "type": "radio",
              "label": "Is the business based in the UK?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            }
          ]
        }
      ]
    },
    {
      "id": "business",
      "title": "Business details",
      "kind": "form",
      "groups": [
        {
          "id": "business.main",
          "title": "About the business",
          "elements": [
            {
              "id": "business.legalStatus",
              "type": "select",
              "label": "Legal status",
              "options": [
                "Sole trader",
                "Limited company",
                "Partnership",
                "LLP",
                "Other"
              ],
              "required": true
            },
            {
              "id": "business.name",
              "type": "text",
              "label": "Business name",
              "required": true
            },
            {
              "id": "business.trade",
              "type": "select",
              "label": "Main trade",
              "options": [
                "Builder",
                "Electrician",
                "Plumber",
                "Carpenter",
                "Painter/Decorator",
                "Gardener/Landscaper",
                "Cleaner",
                "IT/Consultancy",
                "Other"
              ],
              "required": true
            },
            {
              "id": "business.tradeOther",
              "type": "text",
              "label": "Describe your trade",
              "required": true,
              "showWhen": {
                "all": [
                  {
                    "fact": "business.trade",
                    "equals": "Other"
                  }
                ]
              }
            },
            {
              "id": "business.turnover",
              "type": "select",
              "label": "Annual turnover",
              "options": [
                "Up to £50k",
                "£50k–£100k",
                "£100k–£250k",
                "£250k–£500k",
                "£500k+"
              ],
              "required": true
            },
            {
              "id": "business.employees",
              "type": "number",
              "label": "Number of employees",
              "required": true,
              "min": 0,
              "max": 500
            },
            {
              "id": "business.subcontractors",
              "type": "radio",
              "label": "Do you use subcontractors?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "business.subcontractorCount",
              "type": "number",
              "label": "How many subcontractors?",
              "required": true,
              "min": 1,
              "max": 500,
              "showWhen": {
                "all": [
                  {
                    "fact": "business.subcontractors",
                    "equals": "Yes"
                  }
                ]
              }
            },
            {
              "id": "business.address.line1",
              "type": "text",
              "label": "Trading address line 1",
              "required": true
            },
            {
              "id": "business.address.town",
              "type": "text",
              "label": "Town/City",
              "required": true
            },
            {
              "id": "business.address.postcode",
              "type": "text",
              "label": "Postcode",
              "required": true
            }
          ]
        }
      ]
    },
    {
      "id": "risk",
      "title": "Risk questions",
      "kind": "form",
      "groups": [
        {
          "id": "risk.main",
          "title": "Tell us about the work",
          "elements": [
            {
              "id": "risk.heightWork",
              "type": "radio",
              "label": "Do you work at height above 10 metres?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "risk.depthWork",
              "type": "radio",
              "label": "Do you work at depth (excavations) below 3 metres?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "risk.heatWork",
              "type": "radio",
              "label": "Do you use heat away from your own premises?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true,
              "helpText": "e.g. blowtorches, hot works"
            },
            {
              "id": "risk.hazardous",
              "type": "radio",
              "label": "Any hazardous materials or chemicals used?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "risk.offshore",
              "type": "radio",
              "label": "Any offshore work?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "risk.abroad",
              "type": "radio",
              "label": "Any work abroad?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            }
          ]
        }
      ]
    },
    {
      "id": "cover",
      "title": "Cover options",
      "kind": "form",
      "groups": [
        {
          "id": "cover.main",
          "title": "Choose your cover",
          "elements": [
            {
              "id": "cover.limit",
              "type": "radio",
              "label": "Public liability limit",
              "options": [
                "£1m",
                "£2m",
                "£5m",
                "£10m"
              ],
              "required": true
            },
            {
              "id": "cover.products",
              "type": "radio",
              "label": "Add products liability?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "cover.territorial",
              "type": "select",
              "label": "Territorial limits",
              "options": [
                "UK only",
                "UK + EU",
                "Worldwide (excl. USA/Canada)",
                "Worldwide (incl. USA/Canada)"
              ],
              "required": true
            },
            {
              "id": "cover.excess",
              "type": "select",
              "label": "Excess",
              "options": [
                "£0",
                "£250",
                "£500",
                "£1,000"
              ],
              "required": true
            }
          ]
        }
      ]
    },
    {
      "id": "history",
      "title": "Insurance history",
      "kind": "form",
      "groups": [
        {
          "id": "history.main",
          "title": "Previous insurance",
          "elements": [
            {
              "id": "history.claims",
              "type": "radio",
              "label": "Any liability claims in the last 5 years?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "history.claimList",
              "type": "repeat",
              "label": "Claims",
              "itemLabel": "Claim",
              "minItems": 1,
              "maxItems": 10,
              "itemSchema": [
                {
                  "id": "claim.date",
                  "type": "date",
                  "label": "When did the claim happen?",
                  "required": true
                },
                {
                  "id": "claim.type",
                  "type": "select",
                  "label": "What type of claim was it?",
                  "options": [
                    "Accident",
                    "Theft",
                    "Fire",
                    "Windscreen",
                    "Malicious damage",
                    "Other"
                  ],
                  "required": true
                },
                {
                  "id": "claim.amount",
                  "type": "number",
                  "label": "Approximate cost (£)",
                  "required": false,
                  "min": 0
                },
                {
                  "id": "claim.atFault",
                  "type": "radio",
                  "label": "Were you at fault?",
                  "options": [
                    "Yes",
                    "No",
                    "Partly"
                  ],
                  "required": true
                }
              ],
              "showWhen": {
                "all": [
                  {
                    "fact": "history.claims",
                    "equals": "Yes"
                  }
                ]
              }
            },
            {
              "id": "history.declined",
              "type": "radio",
              "label": "Have you ever had insurance declined, cancelled or voided?",
              "options": [
                "Yes",
                "No"
              ],
              "required": true
            },
            {
              "id": "history.declinedDetails",
              "type": "text",
              "label": "Please tell us more",
              "required": true,
              "showWhen": {
                "all": [
                  {
                    "fact": "history.declined",
                    "equals": "Yes"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "id": "quote",
      "title": "Your quote",
      "kind": "quote",
      "groups": [
        {
          "id": "quote.options",
          "title": "Payment options",
          "elements": [
            {
              "id": "quote.banner",
              "type": "display",
              "text": "Here’s your indicative quote. Choose annual or monthly payments."
            },
            {
              "id": "quote.paymentFrequency",
              "type": "radio",
              "label": "How would you like to pay?",
              "options": [
                "annual",
                "monthly"
              ],
              "required": true,
              "default": "annual"
            },
            {
              "id": "quote.summary",
              "type": "quote",
              "mode": "toggle",
              "paymentFrequencyRef": "quote.paymentFrequency",
              "pricePlaceholders": {
                "annual": 214.9,
                "monthly": {
                  "deposit": 30.0,
                  "instalments": 11,
                  "instalmentAmount": 19.95,
                  "apr": 19.9
                }
              },
              "breakdown": [
                {
                  "label": "Base premium",
                  "amount": 165.0
                },
                {
                  "label": "Trade & risk factors",
                  "amount": 28.9
                },
                {
                  "label": "Products liability",
                  "amount": 12.0
                },
                {
                  "label": "Fees & taxes",
                  "amount": 9.0
                }
              ]
            },
            {
              "id": "quote.inclusions",
              "type": "display",
              "text": "**Typical cover**\n- Injury or damage to third parties\n- Legal defence costs\n- Cover at the locations you work"
            },
            {
              "id": "quote.exclusions",
              "type": "display",
              "text": "**Common exclusions**\n- Deliberate acts\n- Contractual liability beyond policy terms\n- Fines and penalties"
            }
          ]
        }
      ]
    },
    {
      "id": "summary",
      "title": "Check your details",
      "kind": "summary",
      "groups": [
        {
          "id": "summary.playback",
          "title": "Your answers",
          "elements": [
            {
              "id": "summary.view",
              "type": "summary",
              "sections": [
                {
                  "title": "Business",
                  "refs": [
                    "business.*",
                    "start.coverStart"
                  ]
                },
                {
                  "title": "Risk",
                  "refs": [
                    "risk.*"
                  ]
                },
                {
                  "title": "Cover",
                  "refs": [
                    "cover.*"
                  ]
                },
                {
                  "title": "History",
                  "refs": [
                    "history.*"
                  ]
                }
              ]
            },
            {
              "id": "summary.confirm",
              "type": "checkbox",
              "label": "Confirm",
              "options": [
                "I confirm the details are correct"
              ],
              "required": true
            }
          ]
        }
      ]
    },
    {
      "id": "payment",
      "title": "Payment",
      "kind": "payment",
      "groups": [
        {
          "id": "payment.method",
          "title": "How you’ll pay",
          "elements": [
            {
              "id": "payment.method",
              "type": "radio",
              "label": "Payment method",
              "options": [
                "Debit card",
                "Direct Debit"
              ],
              "required": true
            },
            {
              "id": "payment.terms",
              "type": "checkbox",
              "label": "Agreements",
              "options": [
                "I agree to the terms and conditions",
                "I confirm I have answered all questions honestly"
              ],
              "required": true
            }
          ]
        }
      ]
    }
  ]
}
